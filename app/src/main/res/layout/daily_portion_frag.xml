<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/daily_hadith_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/spinner_border"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

<!--        Second CardView-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:padding="8dp"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_daily_portion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center_horizontal"
                    android:text="ورد اليوم"
                    android:textSize="28sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="156dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/txt_daily_portion">

                    <ProgressBar
                        android:id="@+id/ProgressBar_daily"
                        style="@style/DailyPortionProgressBar"
                        android:layout_width="156dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0%"
                        android:textSize="18sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/juz_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txt_daily_portion"
                    android:layout_marginBottom="8dp"
                    android:text="الأول"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/surah_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/juz_number"
                    android:layout_alignParentRight="true"
                    android:text="الفاتحة"
                    android:layout_marginBottom="8dp"
                    android:textSize="22sp" />

                <LinearLayout
                    android:id="@+id/page_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/surah_name"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/page_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="من صفحة     : "
                        android:layout_marginBottom="8dp"
                        android:textSize="22sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/page_details"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dp"
                    android:text="عدد الصفحات: "
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/number_of_pages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/page_details"
                    android:layout_toLeftOf="@id/amount"
                    android:text="1"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_margin="16dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button"
                    android:text="بسم الله نبدأ"
                    android:layout_below="@id/amount"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>