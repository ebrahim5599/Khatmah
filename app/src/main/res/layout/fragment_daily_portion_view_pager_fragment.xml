<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    tools:context=".daily_portion.DailyPortionViewPagerFragment">

    <TextView
        android:id="@+id/surah_name_daily_portion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/arabic_type"
        android:padding="8dp"
        android:text="القرآن الكريم"
        android:textColor="@color/purple_700"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/juz_number_daily_portion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/arabic_type"
        android:padding="8dp"
        android:text="الجزء 3"
        android:textColor="@color/purple_700"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <RelativeLayout
        android:id="@+id/bottom_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/read_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/page_number_daily_portion"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="2dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white" />

            <ProgressBar
                android:id="@+id/progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="2" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/read"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/unchecked"
            android:scaleType="centerCrop" />

    </RelativeLayout>

</RelativeLayout>